@model LoginViewModel;
@{
    ViewData["Title"] = "Login";
}

<div class="w-100 pt-md-5">
    <div class="form-div m-auto mt-5">
        <h1 class="text-center fw-light">Login</h1>
        <hr />
        <form method="post" asp-action="Login" asp-controller="Auth">
            <div asp-validation-summary="ModelOnly" class="text-danger text-sm text-center"></div>
            <div class="input-group mt-3">
                <span class="input-group-text bg-green text-white "><i class="fa-solid fa-envelope"></i></span>
                <input asp-for="Email" type="text" class="form-control" placeholder="Email">
            </div>
            <span class="text-danger text-sm" asp-validation-for="Email"></span>
            <div class="input-group mt-3">
                <span class="input-group-text bg-green text-white"><i class="fa-solid fa-lock"></i></span>
                <input asp-for="Password" type="password" class="form-control" placeholder="Password">
            </div>
            <span class="text-danger text-sm" asp-validation-for="Password"></span>
            <button class="btn bg-green text-white form-control fw-bold mt-3" type="submit">Login</button>
        </form>
    </div>
</div>